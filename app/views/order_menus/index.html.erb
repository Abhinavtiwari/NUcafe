<div class="page-header">
  <h1>Order menus</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Item name</th>
      <th>Item category</th>
      <th>Item picture</th>
      <th>Item description</th>
      <th>Item price</th>
      <th>Quantity </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @item_menus.each do |item_menu| %>
      <tr>
        <%= form_tag(new_order_menu_url, method: 'post', class: 'form-horizontal') do %>
        
        <td><%= text_field_tag :item_menu_id, item_menu.id %></td>
        <td><%= item_menu.item_category %></td>
        <td><%= image_tag item_menu.item_picture, :width => 100 %></td>
        <td><%= item_menu.item_description %></td>
        <td><%= item_menu.item_price %></td>
        <td>
          <div class="form-group">
            <%= text_field_tag :item_quantity, 0, class: 'form-control' %>
          </div>
       </td>
       <td><%= submit_tag "Add to Order", class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
 
<table>
  <p> Order Summary  <%= @order_summary.id %>  </p>
<thead>
<tr>
  <th>Item name</th>
      <th>Item category</th>
      <th>Item picture</th>
      <th>Item description</th>
      <th>Item price</th>
      <th>Quantity </th>
</tr>
</thead>
<tbody>
<th>
  

  <% @inprogress_item_menus.each do |item_menu| %>
      <tr>
        <td><%= item_menu.item_menu.item_name %></td>
        <td><%= item_menu.item_menu.item_category %></td>
        <td><%= item_menu.item_menu.item_picture %></td>
        <td><%= item_menu.item_menu.item_description %></td>
        <td><%= item_menu.item_menu.item_price %></td>
        <td><%= item_menu.item_quantity %></td>
      </tr>
      <% end %>
</th>
</tbody>
</table>




