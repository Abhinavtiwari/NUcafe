<div class="page-header">
  <h1>Order menus</h1>
</div>

<p><%= link_to 'Add a New Order Menu', new_order_menu_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Item</th>
      <th>Item quantity</th>
      <th>Order</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @order_menus.each do |order_menu| %>
      <tr>
        <td><%= order_menu.item_menu.item_name%></td>
        <td><%= order_menu.item_quantity %></td>
        <td><%= order_menu.order_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, order_menu_url(order_menu), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_order_menu_url(order_menu), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, order_menu_url(order_menu), method: 'delete', data: { confirm: "Do you really want to delete this order_menu?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

