<div class="page-header">
  <h1>Editing Order Menu #<%= @order_menu.id %></h1>
</div>

<%= form_tag(order_menu_url(@order_menu), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :item_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :item_id, @order_menu.item_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :item_quantity, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :item_quantity, @order_menu.item_quantity, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :order_id, @order_menu.order_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Order Menu", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
