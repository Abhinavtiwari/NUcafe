<div class="page-header">
  <h1>New Order Menu</h1>
</div>

<%= form_tag(order_menus_url, method: 'post', class: 'form-horizontal') do %>


<div class="form-group">
    <%= label_tag :item_menu_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :item_menu_id, options_from_collection_for_select(ItemMenu.all, :id, :item_name ) %>
    </div>
  </div>





  <div class="form-group">
    <%= label_tag :item_quantity, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :item_quantity, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :order_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Order Menu", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
