<div class="page-header">
  <h1>New Order Summary</h1>
</div>

<%= form_tag(order_summaries_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_status, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :order_status, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :order_date, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_total, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :order_total, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Order Summary", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
