<div class="page-header">
  <h1>Order Summary #<%= @order_summary.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>User</dt>
  <dd><%= @order_summary.user_id %></dd>

  <dt>Order status</dt>
  <dd><%= @order_summary.order_status %></dd>

  <dt>Order date</dt>
  <dd><%= @order_summary.order_date %></dd>

  <dt>Order total</dt>
  <dd><%= @order_summary.order_total %></dd>

</dl>

<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Item Id </th>
      <th>Ordered Quantity</th>
       <th>Item Picture</th>
      
    </tr>
  </thead>

  <tbody>
   <% OrderMenu.where(:order_id => @order_summary.id).each do |order| %>
      <tr>
        <td><%=order.item_menu.item_name%></td>
        <td><%=order.item_menu_id%></td>
        <td><%=order.item_quantity%></td>   
        <td><%= image_tag order.item_menu.item_picture, :width => 100%></td>    
      </tr>
   <%end%>
  </tbody>
  
</table>
</div>



